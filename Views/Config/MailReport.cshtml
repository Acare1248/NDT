@{ViewData["Title"] = "Report List";}   
@*model List<WebNDTIT01.Models.TbConfigMailReport>*@

  <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Report List</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Configurate</a></li>
              <li class="breadcrumb-item active">Setup Report</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
      <div class="container-fluid">
            <div class="row">
                <div class="col-md-12" style="margin-top: 20px;">
                <div class="card">
                  <div class="card-header border-0">
                    <div class="d-flex justify-content-between">
                      <h3 class="card-title">Report List</h3>
                    </div>
                      <div id="printbar" style="margin-top: 10px;"></div>
                  </div>
                  <div class="card-body">
                    <table id="tbReportList" class="table table-bordered table-striped" style="width:100%">
                            <thead>
                                <tr>
                                  <th>Report ID</th>
                                  <th>Report Name</th>
                                  <th>Email Subject</th>
                                  <th>Email Body</th>
                                  <th>Email Address</th>
                                  <th>Keyword source</th> 
                                  <th>Success</th>
                                  <th>Failed</th>
                                  <th>Warning</th>
                                  <th>deviceKeyFrom</th> 
                                  <th>Edit</th> 
                                  <th>Delete</th> 
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                  <th>Report ID</th>
                                  <th>Report Name</th>
                                  <th>Email Subject</th>
                                  <th>Email Body</th>
                                  <th>Email Address</th>
                                  <th>Keyword source</th> 
                                  <th>Success</th>
                                  <th>Failed</th>
                                  <th>Warning</th>
                                  <th>deviceKeyFrom</th> 
                                  <th>Edit</th> 
                                  <th>Delete</th> 
                                </tr>
                            </tfoot>
                    </table>
                  </div>

                  <form>
                    <div class="modal fade" id="DescModal" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                     <h3 class="modal-title">Edit Tracking mail report.</h3>
                                </div>
                                <div class="modal-body">
                                     <h5 class="text-center"></h5>
                                     <div class="form-group row">
                                        <label class="col-sm-4 col-form-label">Report ID</label>
                                        <div class="col-sm-8">
                                          <input type="text" class="form-control" id="report-ID" disabled>
                                        </div>
                                      </div>
                                      <div class="form-group row">
                                        <label class="col-sm-4 col-form-label">Report Name</label>
                                        <div class="col-sm-8">
                                          <input type="text" class="form-control" id="report-name">
                                        </div>
                                      </div>
                                      <div class="form-group row">
                                        <label class="col-sm-4 col-form-label">Mail Subject</label>
                                        <div class="col-sm-8">
                                          <input type="text" class="form-control" id="Mail-Subject">
                                        </div>
                                      </div>
                                      <div class="form-group row">
                                        <label class="col-sm-4 col-form-label">Email Body</label>
                                        <div class="col-sm-8">
                                          <input type="text" class="form-control" id="Email-Body">
                                        </div>
                                      </div>
                                      <div class="form-group row">
                                        <label class="col-sm-4 col-form-label">Email Address</label>
                                        <div class="col-sm-8">
                                          <input type="text" class="form-control" id="Email-Address">
                                        </div>
                                      </div>
                                      <div class="form-group row">
                                        <label class="col-sm-4" for="filter">Keyword Source</label>
                                         <div class="col-sm-8">
                                            <select id="keywordSource" class="form-control">
                                                <option value="1">Subject</option>
                                                <option value="2">Body</option>
                                            </select>
                                         </div>
                                      </div>
                                       <div class="form-group row">
                                        <label class="col-sm-4 col-form-label">Keyword Success</label>
                                        <div class="col-sm-8">
                                          <input type="text" class="form-control" id="Keyword-Success">
                                        </div>
                                      </div>
                                      <div class="form-group row">
                                        <label class="col-sm-4 col-form-label">Keyword Failed</label>
                                        <div class="col-sm-8">
                                          <input type="text" class="form-control" id="Keyword-Failed">
                                        </div>
                                      </div>
                                      <div class="form-group row">
                                        <label class="col-sm-4 col-form-label">Keyword Warning</label>
                                        <div class="col-sm-8">
                                          <input type="text" class="form-control" id="Keyword-Warning">
                                        </div>
                                      </div>
                                      <div class="form-group row">
                                        <label class="col-sm-4 col-form-label">Devices Keyword from</label>
                                        <div class="col-sm-8">
                                            <select id="keywordDevices" class="form-control">
                                                <option value="1">Subject</option>
                                                <option value="2">Body</option>
                                            </select>
                                         </div>
                                      </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" id="update" value="Update" class="btn btn-default" data-dismiss="modal">Save</button>
                                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                            <!-- /.modal-content -->
                        </div>
                        <!-- /.modal-dialog -->
                    </div>
                  </form>


                </div>
              </div>
            </div>
      </div>
    </div>

  @section Scripts{
        <!-- DataTables  & Plugins -->
            <script src="~/lib/bootstable-1.3/bootstable.min.js"></script>
        <!---->
           <script src="~/js/mailreport/retrievermaileport.js"></script>
           <script src="~/js/mailreport/ReportTrackingManipulation.js"></script>
      }